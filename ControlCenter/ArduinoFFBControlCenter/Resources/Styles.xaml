<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="AppBg">#0E1116</Color>
    <Color x:Key="SideBg">#141A22</Color>
    <Color x:Key="TopBg">#11161D</Color>
    <Color x:Key="CardBg">#1A2230</Color>
    <Color x:Key="CardBorderColor">#263244</Color>
    <Color x:Key="Accent">#FF7A1A</Color>
    <Color x:Key="Accent2Color">#2AB7FF</Color>
    <Color x:Key="Muted">#9FB0C5</Color>
    <Color x:Key="Success">#2ECC71</Color>
    <Color x:Key="Warn">#F39C12</Color>
    <Color x:Key="Danger">#E74C3C</Color>

    <SolidColorBrush x:Key="AppBackground" Color="{StaticResource AppBg}" />
    <SolidColorBrush x:Key="SideNavBackground" Color="{StaticResource SideBg}" />
    <SolidColorBrush x:Key="TopBarBackground" Color="{StaticResource TopBg}" />
    <SolidColorBrush x:Key="CardBackground" Color="{StaticResource CardBg}" />
    <SolidColorBrush x:Key="CardBorder" Color="{StaticResource CardBorderColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}" />
    <SolidColorBrush x:Key="Accent2" Color="{StaticResource Accent2Color}" />
    <SolidColorBrush x:Key="MutedText" Color="{StaticResource Muted}" />
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}" />
    <SolidColorBrush x:Key="WarnBrush" Color="{StaticResource Warn}" />
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Danger}" />

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontFamily" Value="Bahnschrift" />
    </Style>

    <ControlTemplate x:Key="ButtonTemplate" TargetType="Button">
        <Border Background="{TemplateBinding Background}" CornerRadius="8" BorderBrush="{StaticResource CardBorder}" BorderThickness="1">
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>
    </ControlTemplate>

    <Style TargetType="Button">
        <Setter Property="FontFamily" Value="Bahnschrift" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Background" Value="{StaticResource CardBackground}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template" Value="{StaticResource ButtonTemplate}" />
    </Style>

    <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="#1F2A3A" />
    </Style>

    <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="{StaticResource AccentBrush}" />
        <Setter Property="Foreground" Value="Black" />
    </Style>

    <Style x:Key="NavButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Padding" Value="12,10" />
        <Setter Property="Foreground" Value="#D7E3F3" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="6">
                        <ContentPresenter HorizontalAlignment="Left" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#1F2834" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="Card" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource CardBackground}" />
        <Setter Property="BorderBrush" Value="{StaticResource CardBorder}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="14" />
        <Setter Property="Padding" Value="16" />
    </Style>

</ResourceDictionary>
