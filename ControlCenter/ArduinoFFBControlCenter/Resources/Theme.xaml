<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Soft Dark palette -->
    <Color x:Key="SoftDark.Background0">#0D131E</Color>
    <Color x:Key="SoftDark.Background1">#111A27</Color>
    <Color x:Key="SoftDark.Surface">#172335</Color>
    <Color x:Key="SoftDark.Surface2">#1C2A3F</Color>
    <Color x:Key="SoftDark.SurfaceHover">#233652</Color>
    <Color x:Key="SoftDark.SurfacePressed">#2A3E5E</Color>
    <Color x:Key="SoftDark.Border">#2D4262</Color>
    <Color x:Key="SoftDark.TextPrimary">#F6FAFF</Color>
    <Color x:Key="SoftDark.TextSecondary">#AAB8CD</Color>
    <Color x:Key="SoftDark.Accent">#3F9DFF</Color>
    <Color x:Key="SoftDark.AccentStrong">#1C84F3</Color>
    <Color x:Key="SoftDark.Accent2">#19C795</Color>
    <Color x:Key="SoftDark.Success">#2FB871</Color>
    <Color x:Key="SoftDark.Warning">#E8B045</Color>
    <Color x:Key="SoftDark.Error">#E8686C</Color>
    <Color x:Key="SoftDark.Disabled">#6D7E99</Color>

    <!-- Light palette (default) -->
    <Color x:Key="Light.Background0">#F7FAFF</Color>
    <Color x:Key="Light.Background1">#EEF4FF</Color>
    <Color x:Key="Light.Surface">#FFFFFF</Color>
    <Color x:Key="Light.Surface2">#ECF3FF</Color>
    <Color x:Key="Light.SurfaceHover">#DFEBFF</Color>
    <Color x:Key="Light.SurfacePressed">#D4E4FF</Color>
    <Color x:Key="Light.Border">#AFC4E6</Color>
    <Color x:Key="Light.TextPrimary">#17253A</Color>
    <Color x:Key="Light.TextSecondary">#3A5674</Color>
    <Color x:Key="Light.Accent">#248BFF</Color>
    <Color x:Key="Light.AccentStrong">#0E75E2</Color>
    <Color x:Key="Light.Accent2">#00BFA5</Color>
    <Color x:Key="Light.Success">#179D67</Color>
    <Color x:Key="Light.Warning">#CA7D13</Color>
    <Color x:Key="Light.Error">#D84F5A</Color>
    <Color x:Key="Light.Disabled">#91A7C3</Color>

    <!-- Active tokens (Light default) -->
    <Color x:Key="Background0">#F7FAFF</Color>
    <Color x:Key="Background1">#EEF4FF</Color>
    <Color x:Key="Surface">#FFFFFF</Color>
    <Color x:Key="Surface2">#ECF3FF</Color>
    <Color x:Key="SurfaceHover">#DFEBFF</Color>
    <Color x:Key="SurfacePressed">#D4E4FF</Color>
    <Color x:Key="Border">#AFC4E6</Color>
    <Color x:Key="TextPrimary">#17253A</Color>
    <Color x:Key="TextSecondary">#3A5674</Color>
    <Color x:Key="Accent">#248BFF</Color>
    <Color x:Key="AccentStrong">#0E75E2</Color>
    <Color x:Key="Accent2Color">#00BFA5</Color>
    <Color x:Key="Success">#179D67</Color>
    <Color x:Key="Warning">#CA7D13</Color>
    <Color x:Key="Error">#D84F5A</Color>
    <Color x:Key="Disabled">#91A7C3</Color>

    <SolidColorBrush x:Key="Background0Brush" Color="{StaticResource Background0}" />
    <SolidColorBrush x:Key="Background1Brush" Color="{StaticResource Background1}" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}" />
    <SolidColorBrush x:Key="Surface2Brush" Color="{StaticResource Surface2}" />
    <SolidColorBrush x:Key="SurfaceHoverBrush" Color="{StaticResource SurfaceHover}" />
    <SolidColorBrush x:Key="SurfacePressedBrush" Color="{StaticResource SurfacePressed}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource Border}" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}" />
    <SolidColorBrush x:Key="AccentStrongBrush" Color="{StaticResource AccentStrong}" />
    <SolidColorBrush x:Key="Accent2Brush" Color="{StaticResource Accent2Color}" />
    <SolidColorBrush x:Key="Accent2" Color="{StaticResource Accent2Color}" />
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Warning}" />
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource Error}" />
    <SolidColorBrush x:Key="DisabledBrush" Color="{StaticResource Disabled}" />
    <SolidColorBrush x:Key="AccentMutedBrush" Color="#26248BFF" />
    <SolidColorBrush x:Key="AccentMutedStrongBrush" Color="#44248BFF" />
    <SolidColorBrush x:Key="SuccessMutedBrush" Color="#2C179D67" />
    <SolidColorBrush x:Key="WarningMutedBrush" Color="#33CA7D13" />
    <SolidColorBrush x:Key="ErrorMutedBrush" Color="#33D84F5A" />

    <!-- Legacy aliases used across existing views -->
    <SolidColorBrush x:Key="AppBackground" Color="{StaticResource Background0}" />
    <SolidColorBrush x:Key="SideNavBackground" Color="{StaticResource Background1}" />
    <SolidColorBrush x:Key="TopBarBackground" Color="{StaticResource Background1}" />
    <SolidColorBrush x:Key="CardBackground" Color="{StaticResource Surface}" />
    <SolidColorBrush x:Key="CardBorder" Color="{StaticResource Border}" />
    <SolidColorBrush x:Key="MutedText" Color="{StaticResource TextSecondary}" />
    <SolidColorBrush x:Key="WarnBrush" Color="{StaticResource Warning}" />
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Error}" />

    <!-- Layout / typography tokens -->
    <sys:Double x:Key="ControlHeight">44</sys:Double>
    <sys:Double x:Key="TitleSize">28</sys:Double>
    <sys:Double x:Key="H2Size">20</sys:Double>
    <sys:Double x:Key="BodySize">14</sys:Double>
    <sys:Double x:Key="HelperSize">12</sys:Double>

    <Thickness x:Key="PagePadding">24</Thickness>
    <Thickness x:Key="CardPadding">18</Thickness>
    <Thickness x:Key="InputPadding">14,0,40,0</Thickness>
    <CornerRadius x:Key="RadiusSmall">10</CornerRadius>
    <CornerRadius x:Key="RadiusMedium">12</CornerRadius>
    <CornerRadius x:Key="RadiusLarge">16</CornerRadius>
</ResourceDictionary>
