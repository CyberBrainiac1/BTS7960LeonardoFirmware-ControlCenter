<Window x:Class="ArduinoFFBControlCenter.Views.FirstRunProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:helpers="clr-namespace:ArduinoFFBControlCenter.Helpers"
        Title="Welcome"
        Width="560"
        Height="520"
        MinWidth="560"
        MinHeight="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Background="{DynamicResource AppBackground}">
    <Window.Resources>
        <Style x:Key="SetupLabel" TargetType="TextBlock" BasedOn="{StaticResource HelperText}">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
        </Style>
        <Style x:Key="SetupInput" TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Height" Value="46" />
        </Style>
        <Style x:Key="SetupCombo" TargetType="ComboBox" BasedOn="{StaticResource ModernComboBox}">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Height" Value="46" />
        </Style>
    </Window.Resources>
    <Border Margin="16"
            Padding="18"
            Style="{StaticResource Card}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Text="First-time setup"
                       FontSize="20"
                       FontWeight="SemiBold" />

            <TextBlock Grid.Row="1"
                       Margin="0,8,0,0"
                       Text="Enter your identity and AI mode once. This is saved in settings.json."
                       Style="{StaticResource HelperText}"
                       TextWrapping="Wrap" />

            <Grid Grid.Row="2" Margin="0,18,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Name" Style="{StaticResource SetupLabel}" />
                <TextBox x:Name="NameTextBox"
                         Grid.Row="1"
                         Margin="0,6,0,0"
                         Style="{StaticResource SetupInput}"
                         Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="2" Margin="0,10,0,0" Text="Email" Style="{StaticResource SetupLabel}" />
                <TextBox Grid.Row="3"
                         Margin="0,6,0,0"
                         Style="{StaticResource SetupInput}"
                         Text="{Binding UserEmail, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="4" Margin="0,10,0,0" Text="AI Provider" Style="{StaticResource SetupLabel}" />
                <ComboBox Grid.Row="5"
                          Margin="0,6,0,0"
                          Style="{StaticResource SetupCombo}"
                          ItemsSource="{Binding Providers}"
                          SelectedItem="{Binding Provider}" />

                <TextBlock Grid.Row="6" Margin="0,10,0,0" Text="AI Endpoint" Style="{StaticResource SetupLabel}" />
                <TextBox Grid.Row="7"
                         Margin="0,6,0,0"
                         Style="{StaticResource SetupInput}"
                         Text="{Binding Endpoint, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="8" Margin="0,10,0,0" Text="API Key (optional for Ollama)" Style="{StaticResource SetupLabel}" />
                <TextBox Grid.Row="9"
                         Margin="0,6,0,0"
                         Style="{StaticResource SetupInput}"
                         Text="{Binding ApiKey, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>

            <StackPanel Grid.Row="7"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,18,0,0"
                        helpers:PanelSpacing.Spacing="8">
                <Button Content="Continue"
                        Width="110"
                        Style="{StaticResource AccentButton}"
                        IsDefault="True"
                        Click="OnContinueClicked" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
