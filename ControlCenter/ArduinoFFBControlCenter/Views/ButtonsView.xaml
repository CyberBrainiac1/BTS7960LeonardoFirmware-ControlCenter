<UserControl x:Class="ArduinoFFBControlCenter.Views.ButtonsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:ArduinoFFBControlCenter.Helpers">
    <StackPanel Margin="24" helpers:PanelSpacing.Spacing="12">
        <Border Style="{StaticResource Card}">
            <StackPanel>
                <TextBlock Text="Buttons &amp; Encoders" FontSize="16" FontWeight="SemiBold" />
                <TextBlock Text="Live button state viewer (labels are local only)." Foreground="{StaticResource MutedText}" Margin="0,6,0,10" />
                <TextBlock Text="{Binding Notice}" Foreground="{StaticResource MutedText}" Margin="0,0,0,10" />
                <TextBlock Text="{Binding WheelAngle, StringFormat={}Wheel Angle: {0:0}}" Foreground="{StaticResource MutedText}" Margin="0,0,0,10" />
                <StackPanel Orientation="Horizontal" helpers:PanelSpacing.Spacing="8" Margin="0,0,0,10">
                    <Button Content="Save Labels" Command="{Binding SaveLabelsCommand}" />
                    <Button Content="Reset Labels" Command="{Binding ResetLabelsCommand}" />
                </StackPanel>
                <ItemsControl ItemsSource="{Binding Buttons}" IsEnabled="{Binding CanShowButtons}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="6" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="4" Padding="6" Background="#1A2230" CornerRadius="8" BorderBrush="{StaticResource CardBorder}" BorderThickness="1">
                                <StackPanel Orientation="Horizontal" helpers:PanelSpacing.Spacing="6" VerticalAlignment="Center">
                                    <Ellipse Width="10" Height="10">
                                        <Ellipse.Style>
                                            <Style TargetType="Ellipse">
                                                <Setter Property="Fill" Value="#3A4659" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsPressed}" Value="True">
                                                        <Setter Property="Fill" Value="{StaticResource AccentBrush}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Ellipse.Style>
                                    </Ellipse>
                                    <TextBox Text="{Binding Label}" Width="100" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>



