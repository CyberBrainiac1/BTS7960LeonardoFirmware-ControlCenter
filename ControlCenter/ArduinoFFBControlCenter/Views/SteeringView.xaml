<UserControl x:Class="ArduinoFFBControlCenter.Views.SteeringView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:ArduinoFFBControlCenter.Helpers">
    <StackPanel Margin="24" helpers:PanelSpacing.Spacing="12">
        <Border Style="{StaticResource Card}">
            <StackPanel>
                <TextBlock Text="Steering &amp; Calibration" FontSize="16" FontWeight="SemiBold" />
                <TextBlock Text="{Binding SerialConfigNotice}" Foreground="{StaticResource MutedText}" Margin="0,4,0,0" />
                <TextBlock Text="Rotation (deg)" Margin="0,8,0,0" />
                <TextBox Text="{Binding RotationDeg}" Width="120" IsEnabled="{Binding CanUseSerialConfig}" />
                <StackPanel Orientation="Horizontal" helpers:PanelSpacing.Spacing="8" Margin="0,10,0,0">
                    <Button Content="Load" Command="{Binding LoadFromDeviceCommand}" IsEnabled="{Binding CanUseSerialConfig}" />
                    <Button Content="Apply Rotation" Command="{Binding ApplyRotationCommand}" Style="{StaticResource AccentButton}" IsEnabled="{Binding CanUseSerialConfig}" />
                </StackPanel>
            </StackPanel>
        </Border>

        <Border Style="{StaticResource Card}">
            <StackPanel>
                <TextBlock Text="Center / Calibrate" FontSize="16" FontWeight="SemiBold" />
                <TextBlock Text="Use Center to set 0Â° after you manually align the wheel." Foreground="{StaticResource MutedText}" Margin="0,6,0,0" />
                <StackPanel Orientation="Horizontal" helpers:PanelSpacing.Spacing="8" Margin="0,8,0,0">
                    <Button Content="Center" Command="{Binding CenterCommand}" IsEnabled="{Binding CanUseSerialConfig}" />
                    <Button Content="Calibrate" Command="{Binding CalibrateCommand}" IsEnabled="{Binding CanUseSerialConfig}" />
                </StackPanel>
            </StackPanel>
        </Border>
    </StackPanel>
</UserControl>



