<UserControl x:Class="ArduinoFFBControlCenter.Views.SnapshotsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:ArduinoFFBControlCenter.Helpers">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Grid.Column="0" Grid.Row="0" Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Text="Snapshot Timeline" FontSize="16" FontWeight="SemiBold" />
                    <StackPanel Orientation="Horizontal" helpers:PanelSpacing.Spacing="8" Margin="0,8,0,0">
                        <ComboBox Width="160" ItemsSource="{Binding Filters}" SelectedItem="{Binding SelectedFilter}" />
                        <Button Content="Refresh" Command="{Binding RefreshCommand}" />
                        <Button Content="Manual Snapshot" Command="{Binding CreateManualSnapshotCommand}" />
                    </StackPanel>
                    <ListBox ItemsSource="{Binding SnapshotList}" SelectedItem="{Binding SelectedSnapshot}" DisplayMemberPath="Label" Height="260" Margin="0,8,0,0" />
                    <StackPanel Orientation="Horizontal" helpers:PanelSpacing.Spacing="8" Margin="0,8,0,0">
                        <Button Content="Revert Settings" Command="{Binding RevertSettingsCommand}" Style="{StaticResource PrimaryButton}" />
                        <Button Content="Revert Firmware" Command="{Binding RevertFirmwareCommand}" />
                        <Button Content="Revert Both" Command="{Binding RevertBothCommand}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Grid.Row="0" Style="{StaticResource Card}" Margin="16,0,0,0">
                <StackPanel>
                    <TextBlock Text="Compare Snapshots" FontSize="16" FontWeight="SemiBold" />
                    <StackPanel Orientation="Horizontal" helpers:PanelSpacing.Spacing="8" Margin="0,8,0,0">
                        <ComboBox ItemsSource="{Binding SnapshotList}" SelectedItem="{Binding CompareLeft}" DisplayMemberPath="Label" Width="180" />
                        <ComboBox ItemsSource="{Binding SnapshotList}" SelectedItem="{Binding CompareRight}" DisplayMemberPath="Label" Width="180" />
                        <Button Content="Compare" Command="{Binding CompareSelectedCommand}" />
                    </StackPanel>
                    <ListBox ItemsSource="{Binding DiffLines}" Height="220" Margin="0,8,0,0" />
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>


