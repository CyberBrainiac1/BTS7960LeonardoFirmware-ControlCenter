<Application x:Class="ArduinoFFBControlCenter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:ArduinoFFBControlCenter.ViewModels"
             xmlns:views="clr-namespace:ArduinoFFBControlCenter.Views"
             xmlns:helpers="clr-namespace:ArduinoFFBControlCenter.Helpers"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
            <helpers:InverseBooleanConverter x:Key="InverseBool" />
            <helpers:StepVisibilityConverter x:Key="StepVisibility" />
            <helpers:BoolToBrushConverter x:Key="BoolToBrush" />

            <DataTemplate DataType="{x:Type vm:HomeViewModel}">
                <views:HomeView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:SetupWizardViewModel}">
                <views:SetupWizardView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:CalibrationViewModel}">
                <views:CalibrationView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:FirmwareViewModel}">
                <views:FirmwareView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:FfbTuningViewModel}">
                <views:FfbTuningView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:SteeringViewModel}">
                <views:SteeringView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ButtonsViewModel}">
                <views:ButtonsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:PedalsViewModel}">
                <views:PedalsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:ProfilesViewModel}">
                <views:ProfilesView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:TelemetryViewModel}">
                <views:TelemetryView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:SelfTestViewModel}">
                <views:SelfTestView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:LabToolsViewModel}">
                <views:LabToolsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:DiagnosticsViewModel}">
                <views:DiagnosticsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:SnapshotsViewModel}">
                <views:SnapshotsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vm:PhoneDashboardViewModel}">
                <views:PhoneDashboardView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
